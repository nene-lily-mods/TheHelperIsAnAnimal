<?xml version="1.0" encoding="UTF-8"?>
<configs>
    <append xpath="/item_modifiers">
        <item_modifier name="modFoxClawCharm" 
                       installable_tags="armorHands" modifier_tags="foxCharmClaw" 
                       blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="CustomIcon" value="foxClawCharm"/>
            <property name="DescriptionKey" value="modFoxClawCharmDesc"/>
            <property name="EconomicValue" value="1000"/>

            <effect_group name="FoxClawCharm_effects">
                <triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffEquippedFoxClaw"/>
                <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="buffEquippedFoxClaw"/>
            </effect_group>
        </item_modifier>

        <item_modifier name="modFoxClawCharmEX" 
                       installable_tags="armorHands" modifier_tags="foxCharmClawEx" 
                       blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="CustomIcon" value="foxClawCharm"/>
            <property name="CustomIconTint" value="FFD700"/>
            <property name="DescriptionKey" value="modFoxClawCharmEXDesc"/>
            <property name="EconomicValue" value="2000"/>

            <effect_group name="FoxClawCharmEX_effects">
                <triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffEquippedFoxClawEX"/>
                <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="buffEquippedFoxClawEX"/>
            </effect_group>
        </item_modifier>

        <item_modifier name="modLapinPedalBooster" installable_tags="vehicle" modifier_tags="speed" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="CustomIcon" value="modLapinPedalBooster"/>
            <property name="DescriptionKey" value="modLapinPedalBoosterDesc"/>
            <effect_group tiered="false">
                <passive_effect name="VehicleVelocityMaxPer" operation="perc_add" value="0.40"/>
            </effect_group>
        </item_modifier>

        <item_modifier name="modLapinWrenchBooster" installable_tags="salvageTool" modifier_tags="lapinSupport,salvageBoost" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="CustomIcon" value="modLapinWrenchBooster"/>
            <property name="DescriptionKey" value="modLapinWrenchBoosterDesc"/>
            <effect_group tiered="false">
                <passive_effect name="HarvestCount" operation="perc_add" value="0.15"/>
                <passive_effect name="DegradationPerUse" operation="perc_add" value="-0.25"/>
            </effect_group>
        </item_modifier>

        <item_modifier name="modLapinMultiLinkBooster" installable_tags="tool,melee" modifier_tags="lapinSupport,multilink" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="CustomIcon" value="modLapinMultiLinkBooster"/>
            <property name="DescriptionKey" value="modLapinMultiLinkBoosterDesc"/>
            <effect_group tiered="false">
                <passive_effect name="AttacksPerMinute" operation="perc_add" value="0.4"/>
                <passive_effect name="DegradationPerUse" operation="perc_add" value="-0.1"/>
                <passive_effect name="StaminaLoss" operation="perc_add" value="-.1" tags="primary,secondary"/>
            </effect_group>
        </item_modifier>

        <item_modifier name="modLapinTurboBooster" installable_tags="vengine" modifier_tags="lapinSupport,turboboost" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="CustomIcon" value="modLapinTurboBooster"/>
            <property name="DescriptionKey" value="modLapinTurboBoosterDesc"/>
            <property name="EconomicValue" value="1000"/>
            <effect_group tiered="false">
                <passive_effect name="VehicleMotorTorquePer" operation="perc_add" value=".2"/>
                <passive_effect name="VehicleEntityDamage" operation="perc_add" value=".2"/>
                <passive_effect name="VehicleBlockDamage" operation="perc_add" value=".2"/>
                <passive_effect name="VehicleVelocityMaxPer" operation="perc_add" value="0.3"/>
                <passive_effect name="VehicleFuelUsePer" operation="perc_set" value=".3"/>
            </effect_group>
        </item_modifier>

        <item_modifier name="modBearPoisonWard" installable_tags="armorChest" modifier_tags="modArmorPoisonWard" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster" />
            <property name="CustomIcon" value="MedicCharm"/>
            <property name="CustomIconTint" value="66FF66"/>
            <property name="DescriptionKey" value="modBearPoisonWardDesc"/>
            <property name="Material" value="Msteel"/>
            <property name="EconomicValue" value="1200"/>
            <effect_group name="FoxClawCharm_effects">
                <triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffPoisonWard"/>
                <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="buffPoisonWard"/>
            </effect_group>
        </item_modifier>
    </append>
</configs>